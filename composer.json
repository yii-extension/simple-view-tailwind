{
    "name": "yii-extension/simple-view-tailwind",
    "type": "library",
    "description": "Simple view tailwind for web application yii3.",
    "keywords": [
        "yii3",
        "tailwind"
    ],
    "license": "BSD-3-Clause",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.4|^8.0",
        "yii-extension/alert-flash-tailwind": "^1.0",
        "yii-extension/fontawesome": "^1.0",
        "yii-extension/tailwind": "^1.0",
        "yiisoft/assets": "^2.0",
        "yiisoft/form": "^1.0@dev",
        "yiisoft/translator-formatter-intl": "^1.0",
        "yiisoft/translator-message-php": "^1.0",
        "yiisoft/user": "^3.0@dev",
        "yiisoft/yii-event": "^1.0",
        "yiisoft/yii-view": "^4.0"
    },
    "require-dev": {
        "codeception/c3": "^2.6",
        "codeception/codeception": "^4.1",
        "codeception/module-asserts": "^1.3",
        "codeception/module-phpbrowser": "^1.0",
        "vimeo/psalm": "^4.7",
        "yii-extension/simple-app": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Simple\\View\\Tailwind\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Simple\\View\\Tailwind\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        },
        "config-plugin-options": {
            "source-directory": "config"
        },
        "config-plugin": {
            "params": "params.php",
            "common": [
                "common/*.php"
            ],
            "routes": "routes.php"
        },
        "config-plugin-environments": {
            "tests": {
                "params": "tests/params.php"
            }
        }
    },
    "config": {
        "sort-packages": true
    }
}
